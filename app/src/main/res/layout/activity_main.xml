<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_view"
    android:background="@drawable/back_sun_d"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/airports_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:padding="20dp"
            app:srcCompat="@drawable/clear_d" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#B7C4D6D6"
            android:fontFamily="sans-serif"

            android:gravity="center"
            android:text="Lugano"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="20°C"
            android:gravity="center"
            android:layout_weight="1"

            android:background="#B7C4D6D6"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_clouds_label"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Clouds"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:background="#B7C4D6D6"
                    android:fontFamily="sans-serif"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_humidity_label"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Humidity"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:background="#B7C4D6D6"
                    android:fontFamily="sans-serif"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_wind_label"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Wind speed"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:background="#B7C4D6D6"
                    android:fontFamily="sans-serif"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_date_label"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Datetime"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:background="#B7C4D6D6"
                    android:fontFamily="sans-serif"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_clouds_value"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="20°C"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:background="#B7C4D6D6"
                    android:fontFamily="sans-serif"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_humidity_value"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="20°C"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:background="#B7C4D6D6"
                    android:fontFamily="sans-serif"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_wind_value"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="20°C"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:background="#B7C4D6D6"
                    android:fontFamily="sans-serif"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_date_value"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="20°C"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:background="#B7C4D6D6"
                    android:fontFamily="sans-serif"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>


